<div class="col-md-12">
	<h1 class="form-h1">投稿内容確認</h1>
</div>

<div class="col-md-8 main">
	<div class="container-fluid">
		<div class="row confirm-item">
			<div class="col-md-4 col-form-label text-left">お名前</div>
			<div class="col-md-8 col-form-label"><%= @post.name %></div>
		</div>
		<div class="row confirm-item">
			<div class="col-md-4 col-form-label text-left">タイトル</div>
			<div class="col-md-8 col-form-label"><%= @post.title %></div>
		</div>
		<div class="row confirm-item">
			<div class="col-md-4 col-form-label text-left">動画URL</div>
			<div class="col-md-8 col-form-label"><%= @post.video_url %></div>
		</div>
		<div class="row confirm-item">
			<div class="col-md-4 col-form-label text-left">チャンネルURL</div>
			<div class="col-md-8 col-form-label"><%= @post.channel_url %></div>
		</div>
		<div class="row confirm-item">
			<div class="col-md-4 col-form-label text-left">本文内容</div>
			<div class="col-md-8 col-form-label"><%= @post.content %></div>
		</div>

		<div class="row">
			<div class="col-md-12">
				<%= form_with model: @post do |f| %>
					<%= f.hidden_field :id %>
					<%= f.hidden_field :name %>
					<%= f.hidden_field :title %>
					<%= f.hidden_field :video_url %>
					<%= f.hidden_field :channel_url %>
					<%= f.hidden_field :password %>
					<%= f.hidden_field :content %>
					<%= f.submit "投稿", class: "btn-del" %>
					<%= f.submit "入力に戻る", name: "back", class: "btn-del" %>
				<% end %>
			</div>
		</div>
	</div>
</div>
