<div class="col-md-8 main">
	<% @post.errors.full_messages.each do |message| %>
		<div class="alert alert-danger">
			<%= message %>
		</div>
	<% end %>

  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert].html_safe %>
    </div>
  <% end %>   

	<%= form_with model: @post, url: { action: "confirm" } do |f| %>
		<div class="form-group text-left">
			<%= f.label :name, "お名前" %>
			<%= f.text_field :name, class: "form-control" %>
		</div>
		<div class="form-group text-left">
			<%= f.label :title, "タイトル" %>
			<%= f.text_field :title, class: "form-control" %>
		</div>
		<div class="form-group text-left">
			<%= f.label :video_url, "動画URL", class: "require" %>
			<%= f.text_field :video_url, class: "form-control", :placeholder => "https://www.youtube.com/embed/XXXX", required: true %>
		</div>
		<div class="form-group text-left">
			<%= f.label :channel_url, "チャンネルURL" %>
			<%= f.text_field :channel_url, class: "form-control", :placeholder => "https://www.youtube.com/channel/XXXX" %>
		</div>
		<div class="form-group text-left">
			<%= f.label :password, "編集・削除パスワード", class: "require" %>
      <span>※4～8文字</span>
			<%= f.password_field :password, class: "form-control", required: true, maxlength: 8, minlength: 4 %>
		</div>
		<div class="form-group text-left">
			<%= f.label :content, "本文内容" %>
			<%= f.text_area :content, class: "form-control", :placeholder => "コンテンツ、宣伝したい内容などを記載してください。" %>
		</div>
		<div>
			<%= f.submit "確認", name: "new", class: "btn-del my-3" %>
		</div>
	<% end %>
</div>
	
